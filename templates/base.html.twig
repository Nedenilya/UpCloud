<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/styles.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header>
        <div class="header">
            <div class="logo__block">
                <img class="logo__image" src="assets/images/cloud.svg">
                <h1 class="logo__text">
                    <a class="home__link" href="/">UpCloud</a>
                </h1>
            </div>
            <div class="sign__buttons">
                <input class="sign__button" type="button" value="sign in">
                <input class="sign__button" type="button" value="sign up">
            </div>
        </div>
        <div class="underhead__bar__container">
            <div class="underhead__bar">
                <div class="nav__path">
                    <h2 class="nav__item">
                        Main
                    </h2>
                    <span class="separator">
                        >
                    </span>
                    <h2 class="nav__item">
                        Item
                    </h2>
                </div>
                <div class="rightside__block">
                    <div class="search__container">
                        <div class="search__block">
                            <img class="search__glass" src="assets/images/search-glass.svg">
                            <input class="search__field" type="search">
                        </div>
                    </div>
                    <img class="history__button" src="assets/images/book.svg">
                </div>
            </div>
        </div>
    </header>
        {% endblock %}

        {% block body %}{% endblock %}
    </body>
</html>
